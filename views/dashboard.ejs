    <script>
        async function loadCard() {
            try {
                // Fetch card details from the server
                const response = await fetch('/user-card', {
                    method: 'GET',
                    credentials: 'include' // Include cookies for session handling
                });

                if (!response.ok) {
                    throw new Error('Failed to load card');
                }

                const cardDetails = await response.json();
                const expiryDate = new Date(cardDetails.expiryDate);

                // Format card number to show only the last four digits initially
                const maskedCardNumber = `**** **** **** ${cardDetails.cardNumber.slice(-4)}`;
                document.getElementById('cardNumber').innerText = maskedCardNumber;
                document.getElementById('cardholderName').innerText = cardDetails.cardholderName;
                document.getElementById('expiryDate').innerText = `${String(expiryDate.getMonth() + 1).padStart(2, '0')}/${String(expiryDate.getFullYear()).slice(2)}`;
                document.getElementById('cvv').innerText = '***';

                // Show the card information section and hide the "Open Card" button if the card exists
                document.getElementById('cardInfo').style.display = 'block';
                document.getElementById('openCardBtn').style.display = 'none';

                // Toggle button functionality
                const showDetailsBtn = document.getElementById('showDetailsBtn');
                let detailsVisible = false;

                showDetailsBtn.addEventListener('click', () => {
                    if (detailsVisible) {
                        // Hide details
                        document.getElementById('cardNumber').innerText = maskedCardNumber;
                        document.getElementById('cvv').innerText = '***';
                        showDetailsBtn.innerText = 'Show Details';
                    } else {
                        // Show full card number and CVV
                        document.getElementById('cardNumber').innerText = cardDetails.cardNumber.match(/.{1,4}/g).join(" ");
                        document.getElementById('cvv').innerText = cardDetails.cvv;
                        showDetailsBtn.innerText = 'Hide Details';
                    }
                    detailsVisible = !detailsVisible;
                });
            } catch (error) {
                console.error(error);
                document.getElementById("bankCard").style.display = 'none';
            }
        }

        // Call loadCard function when the page loads
        window.onload = loadCard;

    </script>
